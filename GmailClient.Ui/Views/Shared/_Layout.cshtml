<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GmailSenderClient</title>
    <script src="https://cdn.ckeditor.com/ckeditor5/34.2.0/classic/ckeditor.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="a-logo" asp-controller="Home" asp-action="Index">
            <h2 class="logo">Email Client</h2>
        </a>
        <nav class="navigation">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a asp-controller="dashboard" asp-action="main">Dashboard</a>
                <a asp-controller="account" asp-action="index">Account</a>
            }
            else
            {
                <button class="btnLogin-popup">Login</button>
            }
        </nav>
    </header>

    <partial name="_AuthenticationPartial" model="new AuthenticationViewModel()" />

    @RenderBody()

    <script src="~/js/script.js"></script>
</body>
</html>
